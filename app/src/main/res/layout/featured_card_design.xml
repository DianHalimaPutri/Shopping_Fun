<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/eminaliptin"
            android:layout_width="match_parent"
            android:layout_height="140dp"
             android:src="@drawable/emina"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/emina_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emina Glossy Stain"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4.9"
            style="@style/Widget.AppCompat.RatingBar.Small"/>
        
        <TextView
            android:id="@+id/emina_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Emina Glossy Stain adalah lip tint dengan gloss finish yang nyaman digunakan sehari-hari."/>



    </LinearLayout>


</androidx.cardview.widget.CardView>